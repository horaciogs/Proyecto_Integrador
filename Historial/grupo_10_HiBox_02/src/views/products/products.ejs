<!DOCTYPE html>
<html lang="es">
	<%- include ('../partials/head', {title: "Productos", style: "/css/styles-products.css"}) %>
<body>

    <!-- Inclución de Header -->
    <%- include ('../partials/header') %> 
      <main>
          <section class="conteiner-titulo">
            <h3>Inicio > Productos</h3>
            <div class="items-select">
				<select name="categoria" id="categoria" class="productCategory" >
					<option disabled value="Categoría del Producto" selected>Categoría del Producto</option>
					<% let opcionesCat = ['Aventura','Entretenimiento','Gastronomia'] %>
					<% for (const unaOpcion of opcionesCat) { %>
						<option value="<%= unaOpcion %>" <%= locals.oldData && (unaOpcion === oldData.categoria)? 'selected' : null %>><%= unaOpcion %></option>
					<% } %>
				</select>
				<select name="subCategoria" id="subCategoria" class="productSubCategory">
					<option disabled value="Subcategorias" selected>Subcategorias</option>
					<% let opcionesSubCat = ['Individual','Acompañado','Familiar'] %>
					<% for (const unaOpcion of opcionesSubCat) { %>
						<option value="<%= unaOpcion %>" <%= locals.oldData && (unaOpcion === oldData.subCategoria)? 'selected' : null %>><%= unaOpcion %></option>
					<% } %>
				</select>
                <form class="form-filtro" action="/products" method="get">
                    <button type="submit" class="go">Go!</button>
                </form>
			    </div>
               </section>
          <section class="contenedor-novedades-productos">
            <div class="products">
                <% for(let producto of products) { %>
                <article>
                    <div class="novedad-producto">
                        <p><%= producto.estado.toUpperCase()%></p>
                    </div>
                    <img src="<%= producto.img%>", alt="Imagen Aventura" class="product_img">
                    <div class="icono-plus-prtoducto"><i class="fas fa-plus"></i></div>
                    <div class="nombre-producto">
                        <p><%= producto.nombre%></p>
                    </div>
                    <div class="contenedor-detalle">
                    <p class="precios">$<%= producto.precio%></p>
                    <p class="discount">$<%= producto.precioAnterior%></p>
                    </div>
                    <div class="acceso-detalle">
                        <a href="/products/productDetail/<%= producto.id%>"> <p>Ver detalle</p> </a>
                    </div>
                </article>
                <% } %>
            </div>
        </section>
	  
      </main>

    <!-- Inclución de Header -->
    <%- include ('../partials/footer') %>  

</body>
</html>
