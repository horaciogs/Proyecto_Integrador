<!DOCTYPE html>
<html lang="en">
    <%- include ('./partials/head', {title: "Contact Us", style: "/css/styles-pages.css"}) %>
<body>
    
    <!-- Inclución de Header -->
    <%- include ('./partials/header') %>    
           
    <main class="register">
        <section class="conteiner-page">
            <h3>Contact Us</h3>
            <form class="form-contact" action="https://formsubmit.co/niconovikov@gmail.com" method="POST">
                
                <input type="text" id="firstName" name="Nombre" placeholder="Nombre">
                <input type="text" id="lastName" name="Apellido" placeholder="Apellido">
                <input type="email" id="email" name="Email" placeholder="Correo electrónico">
                <textarea id="message" name="Comentario" cols="30" rows="10"></textarea>        
                <ul class="errores"></ul>
                <button type="submit" class="enviar">Enviar</button>
                <input type="hidden" name="_next" value="http://localhost:3030/products">
                <input type="hidden" name="_captcha" value="false">
                
            </form>
        </section>
    </main>

    <!-- Inclución de Header -->
    <%- include ('./partials/footer') %> 
    <script src="/js/contacto.js"></script> 

</body>
</html>