<!DOCTYPE html>
<html lang="en">
    <%- include ('../partials/head', {title: "Registro", style: "/css/styles-users.css"}) %>
<body>
    
    <!-- Incluci칩n de Header -->
    <%- include ('../partials/header') %>    
           
    <main class="register">
        <section class="conteiner-users">
            <h3>Editar Perfil de Usuario</h3>
            <form class="form-login" action="/users/profile/edit/<%= user.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                
                <img src="<%= user.userImage %>", alt="Imagen de usuario" />
                <input type="text" name="firstName" value="<%= locals.oldData ? oldData.firstName : user.firstName %>">
                <% if (locals.errors && errors.firstName) { %>
                   <div class="invalid">
                       <p><%= errors.firstName.msg %> </p>
                   </div>
                <% } %>
                <input type="text" name="lastName" value="<%= locals.oldData ? oldData.lastName : user.lastName %>">
                <% if (locals.errors && errors.lastName) { %>
                    <div class="invalid">
                        <p><%= errors.lastName.msg %> </p>
                    </div>
                 <% } %>
                <input type="text" name="email" value="<%= locals.oldData ? oldData.email : user.email %>">
                <% if (locals.errors && errors.email) { %>
                    <div class="invalid">
                        <p><%= errors.email.msg %> </p>
                    </div>
                 <% } %>
                <input type="password" name="password" placeholder="Nueva contrase침a">
                <% if (locals.errors && errors.password) { %>
                    <div class="invalid">
                        <p><%= errors.password.msg %> </p>
                    </div>
                 <% } %>
                <input type="password" name="confirmPsw" placeholder="Confirmar contrase침a">
                <% if (locals.errors && errors.confirmPsw) { %>
                    <div class="invalid">
                        <p><%= errors.confirmPsw.msg %> </p>
                    </div>
                 <% } %>
                 <% if (locals.isLogged) { %>
                    <% if(locals.userLogged.userPrivilege == 1) { %>
                        <div class="recuerdame">
                            <input type="checkbox" name="userPrivileges" id="userPrivileges" value="on">
                            <label for="recuerdame">Permisos de administrador</label>
                        </div>
                    <% } %>
                <% } %>    
                <input type="file" name="img">
                <% if (locals.errors && errors.img) { %>
                    <div class="invalid">
                        <p><%= errors.img.msg %> </p>
                    </div>
                 <% } %>


                <button type="submit" class="enviar">Confirmar</button>
                                
                <button type="reset" class="borrar">Borrar</button>

            </form>
        </section>
    </main>

    <!-- Incluci칩n de Header -->
    <%- include ('../partials/footer') %>   

</body>
</html>