<!DOCTYPE html>
<html lang="en">
    <%- include ('../partials/head', {title: "Registro", style: "/css/styles-users.css"}) %>
<body>
    
    <!-- Inclución de Header -->
    <%- include ('../partials/header') %>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>  
           
    <main class="register">
        <section class="conteiner-users">
         <h3>Registrate</h3>

            <form class="form-login" action="/users/register" method="POST" enctype="multipart/form-data">
                
                <input type="text" id="firstName" name="firstName" placeholder="Nombre">
                <input type="text" id="lastName" name="lastName" placeholder="Apellido">
                <input type="text" id="email" name="email" placeholder="Correo electrónico">
                <% if (locals.errors && errors.email) { %>
                    <div class="invalid">
                        <p><%= errors.email.msg %> </p>
                    </div>
                <% } %>
                <input type="password" id="password" name="password" placeholder="Contraseña">
                <input type="password" id="confirmPsw" name="confirmPsw" placeholder="Confirmar contraseña">
                <input type="file" id="img" name="img">
                <ul class="errores"></ul>
               
                <button type="submit" class="enviar">Registrarme</button>
                <div class="recuerdame">
                <input type="checkbox" checked="checked" name="terminosYCondiciones" id="terminos-y-condiciones" value="terminos-y-condiciones">
                <label for="terminos-y-condiciones">Al crear una cuenta, acepta nuestros <a href="#">Terminos & Condiciones</a></label>
                </div>
               
                <button type="reset" class="borrar">Borrar</button>
  
                    <p><a href="./login">Ya tengo una cuenta en HiBox</a></p>

            </form>
        </section>
    </main>

    <!-- Inclución de Header -->
    <%- include ('../partials/footer') %>
    <script src="/js/formulario.js"></script>

</body>
</html>