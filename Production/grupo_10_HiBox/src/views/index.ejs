<!DOCTYPE html>
<html lang="en">
    <%- include ('./partials/head', {title: "Home"}) %>
<body>

    <!-- Inclución de Header -->
    <%- include ('./partials/header') %>

    <main>
        <section class="slider">
            <div class="slider-composition">
                <h3>SAY HI TO YOUR NEXT EXPERIENCE</h3>
                <p class="boton-negro"><a href="/products">Ver más</a></p>
                <img src="/images/bg-home.jpg", alt="Imagen slider", width="100%">
                </div>  
        </section>

        <section class="contenedor-destacados">
            <div class="destacado-aventura">
                    <h3>AVENTURA</h3>
                    <p><a href="/products/aventura">Ver más</a></p>
            <img src="/images/aventura-mobile.jpg", alt="Aventura">
            </div>
            
            <div class="destacado-gastronomia">
                <h3>GASTRONOMÍA</h3>
                <p><a href="/products/gastronomia">Ver más</a></p>
            <img src="/images/gastronomia-mobile.jpg", alt="Gastronomia", width="100%">
            </div>
            
            <div class="destacado-entretenimiento">
                <h3>ENTRETENIMIENTO</h3>
                <p><a href="/products/entretenimiento">Ver más</a></p>
            <img src="/images/entretenimiento-mobile.jpg", alt="Entretenimiento", width="100%">
            </div>
        </section>

        <section class="contenedor-novedades-productos">
            <h3>NOVEDADES</h3>
            <div class="products">
                <% let contador = 0 %>
                <% for(let producto of products) { %>
                    <% if (producto.states.state == "Nuevo" && contador < 4) { %>
                <article>
                    <% contador = contador + 1; %>
                    <div class="novedad-producto">
                        <p><%= producto.states.state%></p>
                    </div>
                    <img src="<%= producto.productImage%>", alt="Imagen Aventura" class="product_img">
                    
                    <form class="icono-plus-prtoducto" 
                        <% if (locals.isLogged) { %>
                            action="/products/productCart/<%= producto.id%>" method="POST" enctype="multipart/form-data"
                        <% } else { %>
                            action="/users/login" method="GET"
                        <% } %> >
                        <button type="submit" class="buttonCart"  ><i class="fas fa-plus"></i></button>
                    </form>
                    
                    <div class="nombre-producto">
                        <p><%= producto.name%></p>
                    </div>
                    <div class="contenedor-detalle">
                    <p class="precios">$<%= producto.price%></p>
                    <p class="discount">$<%= producto.priceBefore%></p>
                    </div>
                    <div class="acceso-detalle">
                        <a href="/products/productDetail/<%= producto.id%>"> <p>Ver detalle</p> </a>
                    </div>
                </article>
                  <% } %>
                <% } %>

            </div>
            </section>
        <section class="contenedor-intrucciones-compra">
            <div class="elementos-instrucciones">
                <div class="item">
                    <img class="imagen-item" src="/images/selecciona-la-experiencia.png", alt="Seleccioná tu experiencia">
                    <p class="texto-item">Seleccioná que tipo de experiencia quieres</p>
                </div>
                <div class="item">
                    <img class="imagen-item" src="/images/elige-tu-compania.png", alt="Elegi con quien compartir tu expereniecia">
                    <p class="texto-item">Elegí con quien la quieres compartir</p>
                </div>
                <div class="item">
                    <img class="imagen-item" src="/images/hibox-para-regalar.png", alt="Podés regalarla o vivirla">
                    <p class="texto-item">Podés regalarla o vivirla</p>
                </div>
            </div>
        </section>
        <section class="contenedor-novedades-productos">
            <h3>DESCUBRÍ TODAS LAS EXPERIENCIAS QUE PODÉS VIVIR</h3>
            <div class="products">
                <% for(let i=0; i < 8; i++) { %>
                    <article>
                        <div class="novedad-producto">
                            <p><%= products[i].states.state%></p>
                        </div>
                        <img src="<%= products[i].productImage%>", alt="Imagen Aventura" class="product_img">
                        
                        <form class="icono-plus-prtoducto" 
                            <% if (locals.isLogged) { %>
                                action="/products/productCart/<%= products[i].id%>" method="POST" enctype="multipart/form-data"
                            <% } else { %>
                                action="/users/login" method="GET"
                            <% } %> >
                            <button type="submit" class="buttonCart"  ><i class="fas fa-plus"></i></button>
                        </form>
                        
                        <div class="nombre-producto">
                            <p><%= products[i].name%></p>
                        </div>
                        <div class="contenedor-detalle">
                        <p class="precios">$<%= products[i].price%></p>
                        <p class="discount">$<%= products[i].priceBefore%></p>
                        </div>
                        <div class="acceso-detalle">
                            <a href="/products/productDetail/<%= products[i].id%>"> <p>Ver detalle</p> </a>
                        </div>
                    </article>
                
                <% } %>


            </div>
        </section> 
    </main>
    
    <!-- Inclución de Footer -->
    <%- include ('./partials/footer') %>  
</body>
</html>